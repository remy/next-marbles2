{
  "runOnSave.commands": [
    {
      "match": ".*\\.bas\\.txt$",
      "command": "txt2bas -i ${file} -o ${fileDirname}/${fileBasenameNoExtension}",
      "runIn": "backend",
      "runningStatusMessage": "Compiling ${fileBasename}",
      "finishStatusMessage": "${fileBasename} compiled"
    }
  ],
  "editor.rulers": [48, 80]
}
